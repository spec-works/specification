<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Target Frameworks - REQUIRED: Support both latest and LTS -->
    <TargetFrameworks>net10.0;net8.0</TargetFrameworks>

    <!-- Language Features - REQUIRED -->
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>

    <!-- Documentation - REQUIRED -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <!-- NuGet Package Metadata - REQUIRED -->
    <PackageId>[YourNamespace]</PackageId>
    <Version>1.0.0</Version>
    <Authors>SpecWorks</Authors>
    <Company>SpecWorks</Company>
    <Description>[Brief description of the package - what specification it implements]</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageProjectUrl>https://github.com/spec-works/[repository-name]</PackageProjectUrl>
    <RepositoryUrl>https://github.com/spec-works/[repository-name]</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>[tag1];[tag2];[tag3];rfc;specification;standards</PackageTags>

    <!-- Source Link - REQUIRED for debugging support -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

    <!-- Optional: Strong naming (if required for your use case) -->
    <!-- <SignAssembly>true</SignAssembly> -->
    <!-- <AssemblyOriginatorKeyFile>key.snk</AssemblyOriginatorKeyFile> -->

    <!-- Optional: Deterministic builds -->
    <Deterministic>true</Deterministic>
    <ContinuousIntegrationBuild Condition="'$(CI)' == 'true'">true</ContinuousIntegrationBuild>
  </PropertyGroup>

  <!-- Include README in package - REQUIRED -->
  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <!-- Source Link Package - REQUIRED -->
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All"/>
  </ItemGroup>

  <!-- Production Dependencies -->
  <!-- Add your actual package dependencies here -->
  <ItemGroup>
    <!-- Example: -->
    <!-- <PackageReference Include="System.Text.Json" Version="10.0.0" /> -->
  </ItemGroup>

